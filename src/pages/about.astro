---
import Page from "~layouts/Page.astro";

import banner from "~assets/banner/about.jpg";

import { Content as Content } from "~content/about.mdx";
import "~styles/markdown.scss";

const title = "About | Gents & Ginger";
const description = `This Manchester-based 5-piece family feast, brings a delicious blend of old-school funk and rock with a modern twist. Off the back of their critically acclaimed debut album 'Githerments in Groove' and sold-out 2024 'Those Were The Days' UK headline tour, Gents & Ginger continue to light up the stage.`;
---

<Page title={title} description={description} banner={banner}>
    <article>
        <Content />
    </article>
</Page>
