---
import Head from "~components/Head.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "~src/consts";
import IMG_048A5038_1200x630 from "~assets/IMG_048A5038_1200x630.jpg";

import Navigation from "~components/Navigation.astro";
import Events from "~components/Events.astro";
import GithermentsInGroove from "~components/GithermentsInGroove.astro";
import YouTube from "~components/YouTube.astro";
import Footer from "~components/Footer.astro";

import banner_desktop from "~assets/banner_desktop.jpg";
---

<!doctype html>
<html lang="en">
    <head>
        <Head title={SITE_TITLE} description={SITE_DESCRIPTION} image={IMG_048A5038_1200x630} />
    </head>
    <body>
        <header>
            <div style="position: absolute; width: 100%;">
                <Navigation />
            </div>

            <div id="banner">
                <img alt="" src={banner_desktop.src} />
            </div>
        </header>

        <main>
            <section>
                <h1 style="font-size: 5rem;">Events</h1>

                <Events number={3} />

                <div class="view-all-events-button">
                    <a href="/gentsandginger/events/">View All Events</a>
                </div>
            </section>

            <section>
                <h1 style="font-size: 3rem;">Githerments In Groove</h1>

                <GithermentsInGroove />
            </section>

            <section>
                <h1 style="font-size: 3rem;">Those were the days</h1>

                <YouTube
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    name="YouTube video player"
                    src="https://www.youtube.com/embed/gXMAVJ8y9Qk?si=yMVbQXZTZnDOYO_x"
                />
            </section>
        </main>

        <Footer />
    </body>
</html>

<style lang="scss">
    @use "~styles/global";
    @use "~styles/fonts";

    #banner {
        height: 100dvh;

        img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
    }

    main {
        max-width: 1000px;
        margin: auto;

        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 5rem;

        padding: 2rem;
        box-sizing: border-box;
    }

    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
    }

    h1 {
        @include fonts.reeniebeanie;
        color: #d57d18;
        font-size: 1rem;
        margin: 0;
    }

    .view-all-events-button {
        display: flex;
        justify-content: center;

        a {
            color: white;
            text-decoration: none;
            background-color: #d57d18;
            padding: 0.5rem;
            box-sizing: border-box;
        }
    }
</style>
