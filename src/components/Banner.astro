---
import { Image } from "astro:assets";

interface Props {
    image: ImageMetadata;
    text: string;
    height?: string;
    width?: string;
    resolution?: string;
}

const { image, height = "100%", width = "100%" } = Astro.props;

const style = `height: ${height}; width: ${width};`;
---

<div class="banner">
    <Image alt="" src={image} class="image" layout="constrained" height="1080" width="1920" style={style} />
    <div class="text">
        <slot />
    </div>
</div>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/color";
    @use "~styles/adam";

    .banner {
        position: relative;

        .image {
            object-fit: cover;
        }

        .text {
            @include adam.base;
            position: absolute;
            inset: 0;
            margin: auto;
            width: max-content;
            height: max-content;

            @include fonts.reeniebeanie;
            font-size: 4rem;

            color: color.$orange;
        }
    }
</style>
