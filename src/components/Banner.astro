---
import banner from "~assets/banner.webm";
import guitar from "~assets/icons/guitar.svg";
import truckfestival from "~assets/icons/truckfestival.svg";
---

<div class="banner">
    <div class="video">
        <video autoplay muted loop playsinline>
            <source src={banner} type="video/webm" />
        </video>
    </div>
</div>

<div class="announcement mobile">
    <div class="guitar">
        <img src={guitar.src} />
    </div>

    <div class="content">
        <img src={truckfestival.src} />
        Come See Us At Truck Festival!
        <a href="https://truckfestival.com/line-up/">Buy Tickets!</a>
    </div>
</div>

<style lang="scss">
    @use "~styles/riko";
    @use "~styles/fonts";

    .video {
        height: 100svh;

        video {
            height: 100%;
            width: 100%;
            object-fit: cover;
            filter: grayscale(100%);
        }
    }

    .announcement {
        position: relative;
    }

    .guitar {
        width: 800px;
        height: calc(1000px / 2.7);

        position: absolute;
        top: calc(-370.37px + 40px);
        right: -80px;
        z-index: 98;

        img {
            height: 100%;
            width: 100%;
            transform: scaleX(-1) rotate(-15deg);
        }
    }

    $announcementTextHeight: 169px;
    $announcementTextWidth: 221px;

    .content {
        height: $announcementTextHeight;
        width: $announcementTextWidth;
        // border: 1px solid green;

        position: absolute;
        top: calc(-1 * ($announcementTextHeight + 15px));
        right: 0;
        z-index: 98;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;

        padding: 0.5rem;
        box-sizing: border-box;

        @include fonts.reeniebeanie;
        font-size: 1.5rem;
        text-align: center;

        a {
            color: blue;
        }

        img {
            height: 30%;
        }
    }
</style>
