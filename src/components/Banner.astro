---
import banner from "~assets/banner.webm";
import guitar from "~assets/icons/guitar.svg";
---

<div class="banner">
    <div class="video">
        <video autoplay muted loop playsinline>
            <source src={banner} type="video/webm" />
        </video>
    </div>
</div>

<div class="mobile announcement">
    <img class="guitar" src={guitar.src} />
    <div class="text">
        Come See Us At Truck Festival!
        <a href="https://truckfestival.com/line-up/">Buy Tickets!</a>
    </div>
</div>

<style lang="scss">
    @use "~styles/riko";
    @use "~styles/fonts";

    .video {
        height: 100svh;

        video {
            height: 100%;
            width: 100%;
            object-fit: cover;
            filter: grayscale(100%);
        }
    }

    .guitar {
        width: 800px;
        height: calc(1000px / 2.7);

        position: absolute;
        top: 60svh;
        right: -100px;
        z-index: 98;

        transform: scaleX(-1) rotate(-15deg);

        img {
            width: 100%;
        }
    }

    .text {
        height: 160px;
        width: 200px;
        border: 1px solid green;

        position: absolute;
        top: 79vh;
        right: 0;
        z-index: 98;

        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;

        @include fonts.reeniebeanie;
        font-size: 1.5rem;
        text-align: end;

        padding: 2rem 2rem 1rem;
        box-sizing: border-box;

        a {
            color: blue;
            text-decoration: none;
        }
    }
</style>
