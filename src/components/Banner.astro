---
interface Props {
    image: ImageMetadata;
    text: string;
    height?: string;
    width?: string;
}

const { image, text, height = "100%", width = "100%" } = Astro.props;

const style = `height: ${height}; width: ${width};`;
---

<div class="banner">
    <div class="text">{text}</div>
    <img class="image" src={image.src} alt="" style={style} />
</div>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/color";
    @use "~styles/adam";

    .banner {
        position: relative;

        .image {
            filter: grayscale(100%);
            object-fit: cover;
        }

        .text {
            @include adam.base;
            position: absolute;
            inset: 0;
            margin: auto;
            width: max-content;
            height: max-content;

            @include fonts.reeniebeanie;
            font-size: 4rem;

            color: color.$orange;
        }
    }
</style>
