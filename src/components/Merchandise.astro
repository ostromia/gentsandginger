---
import { Image } from "astro:assets";

import merchandise from "~assets/merchandise";

interface Props {
    number?: number;
}

const { number = merchandise.length } = Astro.props;

const gbp = new Intl.NumberFormat("en-GB", { style: "currency", currency: "GBP" });
---

<div class="wrapper">
    {
        merchandise.slice(0, number).map((e) => (
            <div class="product" data-title={e.name.toLowerCase()}>
                <div class="image">
                    <Image alt="" src={e.image} />
                </div>

                <div class="text">
                    <div class="title">{e.name}</div>
                    <div class="price">{gbp.format(e.price)}</div>
                </div>

                <button disabled class="button">
                    Sold Out
                </button>
            </div>
        ))
    }
</div>

<style lang="scss">
    @use "~styles/color";
    @use "~styles/fonts";

    .wrapper {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;

        @media (max-width: 700px) {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .product {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        box-sizing: border-box;

        background-color: color.$orange;
        border-radius: 5px;
    }

    .image {
        width: 100%;
        aspect-ratio: 3 / 4;

        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    }

    .text {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .button {
        -webkit-appearance: none;
        border-radius: 0;
        border: 0;
        @include fonts.atkinson;
        font-size: 1rem;
        margin-top: auto;
        border-radius: 3px;
    }
</style>
