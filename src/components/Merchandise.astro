---
import merchandise from "~assets/merchandise";

interface Props {
    number?: number;
}

const { number = merchandise.length } = Astro.props;

const gbp = new Intl.NumberFormat("en-GB", { style: "currency", currency: "GBP" });
---

<div class="wrapper">
    {
        merchandise.slice(0, number).map((e) => (
            <div class="product" data-title={e.name.toLowerCase()}>
                <div class="image">
                    <img alt="" src={e.image} />
                </div>

                <div class="text">
                    <div class="title">{e.name}</div>
                    <div class="price">{gbp.format(e.price)}</div>
                </div>

                <button disabled class="button">
                    Sold Out
                </button>
            </div>
        ))
    }
</div>

<style lang="scss">
    .wrapper {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        width: 100%;

        @media (max-width: 700px) {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .product {
        width: 100%;
        height: 100%;

        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 1rem;
        padding: 0.5rem;
        box-sizing: border-box;

        background-color: #e6972e;
    }

    .image {
        width: 100%;
        aspect-ratio: 1 / 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .image img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }

    .text,
    .button {
        margin-top: auto;
    }
</style>
