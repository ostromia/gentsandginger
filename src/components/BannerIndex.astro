---
import banner from "~assets/banner.webm";
import guitar from "~assets/icons/guitar.svg";
import truckfestival from "~assets/icons/truckfestival.svg";
---

<div class="banner">
    <video autoplay muted loop playsinline>
        <source src={banner} type="video/webm" />
    </video>
</div>

<div class="announcement mobile">
    <img class="guitar" src={guitar.src} />

    <div class="content">announcement section here for something</div>
</div>

<style lang="scss">
    @use "~styles/riko";
    @use "~styles/fonts";

    .banner {
        video {
            height: 100svh;
            width: 100%;
            object-fit: cover;
            filter: grayscale(100%);
            display: block;
        }
    }

    .announcement {
        position: relative;
    }

    .guitar {
        position: absolute;
        top: -200px;
        right: -100px;
        width: 800px;
        height: 370px;
        transform: scaleX(-1);
    }

    .content {
        $height: 177px;
        $width: 185px;
        // border: 1px solid green;

        position: absolute;
        top: -102px;
        right: 0;

        height: $height;
        width: $width;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;

        text-align: center;
    }
</style>
