---
import logo from "~assets/logo.svg";
import hamburger from "~assets/icons/hamburger.svg";
import x from "~assets/icons/x.svg";

import { default as Instagram } from "~assets/icons/instagram.svg";
import { default as YouTube } from "~assets/icons/youtube.svg";
import { default as Spotify } from "~assets/icons/spotify.svg";
import { default as AppleMusic } from "~assets/icons/applemusic.svg";

interface Props {
    style?: string;
}

const { style } = Astro.props;
---

<script>
    window.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".riko-button");
        const menu = document.getElementById("riko-menu")!;
        const rikoButtonOpen = document.getElementById("riko-button-open")!;

        buttons.forEach((btn) => {
            const button = btn as HTMLElement;

            button.addEventListener("click", () => {
                if (window.getComputedStyle(menu).display === "none") {
                    menu.style.display = "flex";

                    document.body.style.overflow = "hidden";
                    document.documentElement.style.overflow = "hidden";

                    rikoButtonOpen.style.display = "none";
                } else {
                    rikoButtonOpen.style.display = "unset";
                    menu.style.display = "none";

                    document.body.style.overflow = "unset";
                    document.documentElement.style.overflow = "unset";

                    document.body.style.overflowX = "hidden";
                    document.documentElement.style.overflowX = "hidden";
                }
            });
        });
    });
</script>

<nav style={style}>
    <div class="ghost mobile">
        <button id="riko-button-open" class="riko-button">
            <img alt="hamburger" src={hamburger.src} />
        </button>

        <a class="logo" href="/gentsandginger/">
            <img alt="" src={logo.src} />
        </a>

        <div id="riko-menu" class="hidden">
            <div class="riko-menu-menu">
                <button class="riko-button">
                    <img alt="x" src={x.src} />
                </button>

                <a class="logo" href="/gentsandginger/">
                    <img alt="" src={logo.src} />
                </a>
            </div>

            <div class="riko-menu-links">
                <a href="/gentsandginger/events/">Events</a>
                <a href="/gentsandginger/merchandise/">Merchandise</a>
                <a href="/gentsandginger/about/">About</a>
                <a href="/gentsandginger/contact/">Contact</a>
            </div>
        </div>
    </div>

    <div class="ghost desktop">
        <div class="links">
            <a href="/gentsandginger/events/">Events</a>
            <a href="/gentsandginger/merchandise/">Merchandise</a>
            <a href="/gentsandginger/about/">About</a>
            <a href="/gentsandginger/contact/">Contact</a>
        </div>

        <a class="logo" href="/gentsandginger/">
            <img alt="" src={logo.src} />
        </a>

        <div class="social-links">
            <a href="https://www.instagram.com/gentsandginger/" aria-label="Instagram" target="_blank">
                <Instagram class="icon" />
            </a>

            <a href="https://www.youtube.com/@gentsginger5174" aria-label="YouTube" target="_blank">
                <YouTube class="icon" />
            </a>

            <a href="https://open.spotify.com/artist/7jIpsmRlZWQbKMjbxVeJ5M?si=0scp_nZNS2KHEGRTYOtZmw" aria-label="Spotify" target="_blank">
                <Spotify class="icon" />
            </a>

            <a href="https://music.apple.com/gb/artist/gents-ginger/1765128507" aria-label="Apple Music" target="_blank">
                <AppleMusic class="icon" />
            </a>
        </div>
    </div>
</nav>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/mia";
    @use "~styles/riko";
    @use "~styles/color";
    @use "~styles/adam";

    // universal styling
    .logo > img {
        max-height: 75px;
        max-width: 100%;
    }

    nav {
        @include adam.navigation;
    }

    // desktop styling
    @media (min-width: riko.$desktop) {
        nav > .desktop {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            width: 100%;
            // display: flex;
            // justify-content: space-between;
            // align-items: center;
            // display: flex;
            // justify-content: center;
            // align-items: center;
            // gap: 2rem;

            padding: 1rem 2rem;
            box-sizing: border-box;

            @include fonts.reeniebeanie;
            font-size: 2rem;
        }

        a {
            // display: block;
            color: color.$orange;
            text-decoration: none;
        }

        .desktop > div {
            display: flex;
            align-items: center;
            gap: 1rem;
            // align-content: center;
        }

        .links {
            justify-content: start;
        }

        .logo {
            display: flex;
            justify-content: center;
        }

        .social-links {
            justify-content: end;
        }

        .icon {
            fill: color.$orange;
            // width: 24px;
            // height: 24px;
        }
    }

    // mobile styling
    @media (max-width: riko.$mobile) {
        nav > .mobile {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            gap: 2rem;

            padding: 1rem;
            box-sizing: border-box;

            :nth-child(1) {
                grid-column: 1;
                justify-self: start;
            }

            :nth-child(2) {
                grid-column: 2;
                justify-self: center;
            }
        }

        .riko-button {
            @include mia.resetButton;
            color: color.$orange;

            img {
                height: 2rem;
                width: 2rem;
            }
        }

        #riko-menu {
            height: 100svh;
            display: none;
            position: fixed;
            inset: 0;

            background-color: color.$eggshell;

            flex-direction: column;

            a {
                color: color.$orange;
                text-decoration: none;
            }

            .riko-menu-menu {
                display: grid;
                grid-template-columns: 1fr auto 1fr;
                align-items: center;
                gap: 2rem;

                padding: 1rem;
                box-sizing: border-box;

                > button {
                    grid-column: 1;
                    justify-self: start;

                    @include mia.resetButton;
                    color: color.$orange;

                    img {
                        height: 2rem;
                        width: 2rem;
                    }
                }

                > a {
                    grid-column: 2;
                    justify-self: center;
                }
            }
        }

        .riko-menu-links {
            display: flex;
            flex: 1;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            @include fonts.reeniebeanie;
            font-size: 2rem;
        }
    }
</style>
