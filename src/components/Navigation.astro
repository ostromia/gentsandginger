---
import logo from "~assets/logo.svg";
---

<!-- prettier-ignore -->
<nav>
    <a href="/gentsandginger/events/">
        Events
    </a>

    <a href="/gentsandginger/merchandise/">
        Merchandise
    </a>

    <a class="logo-link" href="/gentsandginger/">
        <img src={logo.src} />
