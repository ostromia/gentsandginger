<style lang="scss">
    @use "~styles/fonts";

    nav {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        box-sizing: border-box;
        color: #d57d18;
        gap: 2rem;
        @include fonts.reeniebeanie;
        font-size: 32px;
    }

    a {
        color: #d57d18;
        text-decoration: none;
    }

    img {
        height: 5rem;
    }

    @media (max-width: 700px) {
        a:not(.logo-link) {
            display: none;
        }
    }
</style>
