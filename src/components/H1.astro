---
interface Props {
    dynamic?: boolean;
    color?: string;
    align?: string;
    style?: string;
    id?: string;
}
const { dynamic = false, color, align, style, id } = Astro.props;
---

<h1 id={id} class={`${dynamic && "madri"}`} style={`color: ${color}; text-align: ${align}; ${style}`}>
    <slot />
</h1>

<style lang="scss">
    @use "~styles/fonts";

    h1 {
        @include fonts.grandstander;
        // font-size: 2rem;
        margin: 0;
    }
</style>
