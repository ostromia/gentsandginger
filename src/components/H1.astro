---
interface Props {
    size?: string;
}

const { size } = Astro.props;
---

<h1 class={size}>
    <slot />
</h1>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/color";

    h1 {
        margin: 0;
        @include fonts.swankyandmoomoo;
        font-size: 4rem;
        font-weight: normal;
        color: color.$orange;
        text-transform: capitalize;
    }

    .dynamic {
        @media (max-width: 700px) {
            font-size: 3.5rem;
        }

        @media (max-width: 600px) {
            font-size: 3rem;
        }

        @media (max-width: 500px) {
            font-size: 2.5rem;
        }

        @media (max-width: 400px) {
            font-size: 2rem;
        }
    }
</style>
