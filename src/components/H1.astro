---
interface Props {
    class_?: string;
    size?: string;
}

const { size, class_ } = Astro.props;
---

<h1 class={`${size} ${class_}`}>
    <slot />
</h1>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/color";
    @use "~styles/riko";

    h1 {
        margin: 0;
        @include fonts.swankyandmoomoo;
        font-size: 3rem;
        font-weight: normal;
        color: color.$orange;
        text-transform: capitalize;
    }

    .dynamic {
        // @media (max-width: 700px) {
        //     font-size: 3.5rem;
        // }

        // @media (max-width: 600px) {
        //     font-size: 3rem;
        // }

        @media (max-width: 500px) {
            font-size: 2.5rem;
        }

        @media (max-width: 400px) {
            font-size: 2rem;
        }
    }
</style>
