---
import SocialMedia from "~components/SocialMedia.astro";
---

<footer>
    <div class="title">Gents & Ginger</div>

    <SocialMedia style="margin: auto;" color="black" />

    <div class="policies">
        <a href="/about/">About</a>
        <a href="/contact/">Contact</a>
        <a href="/policies/privacy-policy/">Privacy Policy</a>
    </div>

    <div>&copy; Gents & Ginger {new Date().getFullYear()}</div>

    <div class="signature">Built by <a href="https://yalin.io">Berkay Yalin</a>.</div>
</footer>

<style lang="scss">
    @use "~styles/fonts";
    @use "~styles/color";

    footer {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding: 5rem 1rem 10rem;
        box-sizing: border-box;
        text-align: center;
        background-color: color.$orange;
    }

    .title {
        font-size: 2rem;
        @include fonts.reeniebeanie;
        padding: 2rem 0;
        box-sizing: border-box;
    }

    .policies {
        display: flex;
        gap: 1rem;
        justify-content: center;

        a {
            color: black;
            text-decoration: none;
        }
    }

    .signature a {
        color: darkblue;
    }
</style>
